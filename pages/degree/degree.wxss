.navbar {

    display: flex;

    border-bottom: 2px solid #eee;
    
    height: 400rpx;
   
}

.navbar-item {

    flex: 1.0;

    text-align: center;

    font-size: 50rpx;

    color: #999;

    margin-bottom: -1px;
   

}

.navbar-text {
   
    display: block;

    width: 100rpx;

    padding: 10rpx;

    margin: auto;

}

.navbar-text.active {

    border-bottom: 4rpx solid #000;

    color: #000;

    font-weight: bold;

}

.hidden {

    display: none;

}
